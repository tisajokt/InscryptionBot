{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist/",
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": false,
		"baseUrl": "./"
	},
	"files": [
		"src/app.ts"
	],
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
} 